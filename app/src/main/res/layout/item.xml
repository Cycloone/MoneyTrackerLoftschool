<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between_rows"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="@dimen/margin_small"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:id="@+id/item_container"
        android:background="@drawable/bg_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            style="@style/TextWhite"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_of_rows_list"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/padding_for_items"
            android:paddingEnd="@dimen/padding_for_items"
            android:gravity="center_vertical" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_for_items"
            android:paddingRight="@dimen/padding_for_items">

            <TextView
            android:id="@+id/price"
            style="@style/TextWhite"
                android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_of_rows_list"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAlignment="center" />

        <TextView
            style="@style/TextWhite"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_of_rows_list"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/ruble_sign" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>